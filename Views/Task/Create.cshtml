@model MyProject.Models.Task
<form method="post" asp-action="Create" asp-controller="Task">
  <div class="form-group">
    
    <input type="hidden" value ="@ViewBag.Message" name="message" id="message"class="form-control" />
    <input type="hidden" asp-for="Id"/>
  </div>
  <div class="form-group">
    <label asp-for="TaskName">Task Name</label>
    <input asp-for="TaskName" type="text" class="form-control" placeholder="Enter Task Name">
   
  </div>
  <div class="form-group">
    <label asp-for="Description">Description</label>
    <input asp-for="Description" type="text" class="form-control"  placeholder="Task Description">
  </div>
  
  <button type="submit" class="btn btn-primary">Submit</button>
</form>